{
  "name": "Tremo",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Graba una secuencia de acciones generando un script donde tiene una vista preliminar y luego se desgarga automaticamente",
  "icons": {"48": "icon48.png",
          "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "control.html",
    "default_title": "Tremo"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
     "tabs",
     "background",
     "http://*/*"
  ],
  "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["recorder.js"]
  }],
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
